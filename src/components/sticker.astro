---
import { Image } from "astro:assets"
import type { ImageMetadata } from "astro"

interface Props {
  src: ImageMetadata;
  alt: string;
  width: number;
  shadow?: boolean;
}
const { src, alt, width, shadow } = Astro.props;
---

<div>
	<Image src={src} alt={alt} width={width} class={`${shadow && "drop-shadow-sticker"}`} />
</div>